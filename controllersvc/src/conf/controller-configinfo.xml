        <entry key="Scanner-xtremio" value="discovery-xtremio-context.xml"/>

        <entry key="Scanner-ceph" value="discovery-ceph-context.xml" />
        <entry key="Discovery-ceph-all" value="discovery-ceph-context.xml" />
        
